<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
    <Preference
        app:icon="@drawable/ic_home_accent"
        app:summary="@string/app_description"
        app:title="@string/app_name" />

    <PreferenceCategory app:title="@string/about_general">

        <Preference
            app:icon="@drawable/ic_about_info"
            app:key="app_version"
            app:title="@string/about_app_version" />

        <Preference
            app:icon="@drawable/ic_about_github"
            app:key="github"
            app:title="@string/about_github" />

    </PreferenceCategory>
</PreferenceScreen>
